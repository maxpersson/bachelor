<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.volumio.MainActivity"
    tools:showIn="@layout/activity_main">

    <WebView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/webView"
        android:layout_alignParentBottom="true" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RequestButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DisplayText"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/DataField"
        android:layout_alignEnd="@+id/DataField"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/DataField"
        android:layout_below="@+id/RequestButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:layout_below="@+id/DataField"
        android:layout_toLeftOf="@+id/RequestButton"
        android:layout_toStartOf="@+id/RequestButton"
        android:layout_marginTop="151dp"
        android:id="@+id/showRssi" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/webView"
        android:layout_alignRight="@+id/ActivateRssi"
        android:layout_alignEnd="@+id/ActivateRssi"
        android:layout_marginBottom="61dp"
        android:id="@+id/serviceStatus" />

    <Button
        android:id="@+id/ActivateRssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Activate Bluetooth"
        android:layout_above="@+id/serviceStatus"
        android:layout_toLeftOf="@+id/RequestButton"
        android:layout_toStartOf="@+id/RequestButton"
        android:layout_marginBottom="26dp" />

</RelativeLayout>
